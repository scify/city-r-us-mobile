<?xml version='1.0' encoding='utf-8'?>
<widget id="gr.scify.cityrus" version="1.0.b" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>City-R-Us Athens</name>
    <description>
        To City-R-US Athens ειναι μια εφαρμογή που επιτρέπει στους κατοίκους και επισκέπτες της Αθήνας να συμμετάσχουν σε αποστολές με σκοπό τη βελτίωση της ζωής στην πόλη.
    </description>
    <author email="info@scify.org" href="http://www.scify.gr/site/en/">
        SCIFY
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <access origin="*://*.googleapis.com/*" subdomains="true" />
    <access origin="*://*.gstatic.com/*" subdomains="true" />
    <access origin="*://*.google.com/*" subdomains="true" />
    <access origin="*://*.googleusercontent.com/*" subdomains="true" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="*://*.gstatic.com/*" />
    <allow-navigation href="*://*.*.googleapis.com/*" />
    <allow-navigation href="*://*.maps.googleapis.com/*" />
    <platform name="android">
        <allow-intent href="market:* " />
        <icon src="www/img/ldpi/CityRUS_logo.png" density="ldpi" />
        <icon src="www/img/mdpi/CityRUS_logo.png" density="mdpi" />
        <icon src="www/img/hdpi/CityRUS_logo.png" density="hdpi" />
        <icon src="www/img/xhdpi/CityRUS_logo.png" density="xhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="DisallowOverscroll" value="true"/>
        <icon src="www/img/ios/CityRUS_logo_60.png" width="60" height="60"/>
        <icon src="www/img/ios/CityRUS_logo_60_2.png" width="120" height="120"/>
        <icon src="www/img/ios/CityRUS_logo_60_3.png" width="180" height="180"/>
        <icon src="www/img/ios/CityRUS_logo_76.png" width="76" height="76"/>
        <icon src="www/img/ios/CityRUS_logo_76_2.png" width="152" height="152"/>
        <icon src="www/img/ios/CityRUS_logo_40.png" width="40" height="40"/>
        <icon src="www/img/ios/CityRUS_logo_40_2.png" width="80" height="80"/>
        <icon src="www/img/ios/CityRUS_logo_57.png" width="57" height="57"/>
        <icon src="www/img/ios/CityRUS_logo_57_2.png" width="114" height="114"/>
        <icon src="www/img/ios/CityRUS_logo_72.png" width="72" height="72"/>
        <icon src="www/img/ios/CityRUS_logo_72_2.png" width="144" height="144"/>
        <icon src="www/img/ios/CityRUS_logo_29.png" width="29" height="29"/>
        <icon src="www/img/ios/CityRUS_logo_29_2.png" width="58" height="58"/>
        <icon src="www/img/ios/CityRUS_logo_50.png" width="50" height="50"/>
        <icon src="www/img/ios/CityRUS_logo_50_2.png" width="100" height="100"/>
        <splash src="www/img/splash/background_320.png" width="320" height="480"/>
        <splash src="www/img/splash/background_640.png" width="640" height="960"/>
        <splash src="www/img/splash/background_768.png" width="768" height="1024"/>
        <splash src="www/img/splash/background_1536.png" width="1536" height="2048"/>
        <splash src="www/img/splash/background_1024.png" width="1024" height="768"/>
        <splash src="www/img/splash/background_2048.png" width="2048" height="1536"/>
        <splash src="www/img/splash/background_640_1136.png" width="640" height="1136"/>
        <splash src="www/img/splash/background_750.png" width="750" height="1334"/>
        <splash src="www/img/splash/background_1242.png" width="1242" height="2208"/>
        <splash src="www/img/splash/background_2208.png" width="2208" height="1242"/>
    </platform>
    <preference name="orientation" value="portrait"/>
    <preference name="exit-on-suspend" value="false"/>
    <preference name="AndroidLaunchMode" value="singleInstance"/>
    <preference name="keepRunning" value="true"/>
</widget>
